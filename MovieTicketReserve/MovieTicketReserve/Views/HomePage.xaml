<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieTicketReserve.Views.HomePage" BackgroundColor="#263A4F" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Margin="0,60,0,0" Spacing="50">
            <Label Text="Admin Panel" HorizontalOptions="Center" TextColor="White" FontSize="Title" />
            <Button x:Name="BtnMovies" TextColor="White" BackgroundColor="#4d5d6e" FontSize="Title" HeightRequest="200" Text="Movies"  Clicked="BtnMovies_Clicked" />
            <Button x:Name="BtnReservations" TextColor="White" BackgroundColor="#4d5d6e" FontSize="Title" HeightRequest="200" Text="Reservation" Clicked="BtnReservations_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage> 